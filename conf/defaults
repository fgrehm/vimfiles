" vim: filetype=vim
filetype plugin indent on
let mapleader = ","

" Move between terminals using ALT + Arrows
nnoremap <silent> <A-Right> <c-w>l
nnoremap <silent> <A-Left> <c-w>h
nnoremap <silent> <A-Up> <c-w>k
nnoremap <silent> <A-Down> <c-w>j

" search options
set ignorecase smartcase gdefault showmatch hlsearch incsearch

" enable syntax highlight
syntax on

" set the buffer to become hidden instead of preventing the user from changing to another buffer
set hidden

" set proper encoding for files
set encoding=utf8
set fileencoding=utf8

" allow backspacing over everything in insert mode
set backspace=indent,eol,start

" automatically reload the files if they were modified outside vim
set autoread

" enable per-directory .vimrc files
set exrc

" disable unsafe commands in local .vimrc files
set secure

" increase CtrlP matches to 15
let g:ctrlp_max_height = 15

" improve the autocomplete menu
set completeopt=menuone,preview

" ignores for CtrlP
set wildignore+=*.o,*.obj,.git,*/tmp/**,/build/**,*/coverage/**,.jhw-cache,*/.yardoc/**,*/public/source_maps/**,*/node_modules/**

"set split to open in a more natural setup
set splitbelow
set splitright

" TODO: Document options below
set showfulltag
set autoindent
set ruler
set number
set nowrap
set cursorline
set laststatus=2
set showcmd
set showmode
set noerrorbells
set novisualbell
set shiftround
